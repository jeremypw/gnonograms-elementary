<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="difficulty">
    <value value="0" nick="very easy"/>
    <value value="1" nick="easy"/>
    <value value="2" nick="moderate"/>
    <value value="3" nick="hard"/>
    <value value="4" nick="very hard"/>
    </enum>

    <schema path="/apps/gnonograms-elementary/settings/" id="apps.gnonograms-elementary.settings">
        <key name="difficulty" enum="difficulty">
          <default>'moderate'</default>
          <summary>difficulty of generated puzzles</summary>
          <description>
            An approximate measure of how hard the generated random puzzles will be to solve.
          </description>
        </key>
    </schema>
</schemalist>
